@model List<Module.DB.tblSalaryGrade>
@{

    ViewBag.Title = "Salary Grades";
    

    string effectivity = ViewBag.Effectivity;
}

@section Breadcrumbs {
    @Html.Partial("_Breadcrumbs", new List<Breadcrumb>() { new Breadcrumb { Description = ViewBag.Title } })
}

@section Styles {
    <style>
        .sg-cont {
            max-width: 1200px;
            margin: 0 auto;
        }

            .sg-cont th:not(:first-child) {
                text-align: center;
            }

            .sg-cont td:not(:first-child) {
                text-align: right;
                width: 120px !important;
            }
    </style>
}

@section Scripts {
    <script>
        function load(e) { }

    </script>
}

<span>Effectivity:</span>
@Html.Partial("~/Views/Shared/info/effectivityInfo.cshtml", "/HR/Config/SalaryGrades/Details/")

<div class="sg-cont">
    <div class="table-responsive">
        <table class="table" data-paging="false" data-ordering="false">
            <thead>
                <tr>
                    <th>Salary Grade</th>
                    <th>Step 1</th>
                    <th>Step 2</th>
                    <th>Step 3</th>
                    <th>Step 4</th>
                    <th>Step 5</th>
                    <th>Step 6</th>
                    <th>Step 7</th>
                    <th>Step 8</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Module.DB.tblSalaryGrade item in Model)
                {
                    <tr>
                        <td>@item.SalaryGrade</td>
                        <td>@Html.DisplayFor(model => item.Step1)</td>
                        <td>@Html.DisplayFor(model => item.Step2)</td>
                        <td>@Html.DisplayFor(model => item.Step3)</td>
                        <td>@Html.DisplayFor(model => item.Step4)</td>
                        <td>@Html.DisplayFor(model => item.Step5)</td>
                        <td>@Html.DisplayFor(model => item.Step6)</td>
                        <td>@Html.DisplayFor(model => item.Step7)</td>
                        <td>@Html.DisplayFor(model => item.Step8)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>





@section FormActions {
    <div class="details" modal-width="modal-xl" modal-load-callback="load">
        <a href="#" class="btn btn-sm btn-default btn-edit" data-url="@Url.Action("Edit", new { dt = effectivity })">Edit</a>
        <a href="#" class="btn btn-sm btn-default btn-create" data-url="@Url.Action("CreateCopy", new { dt = effectivity })">Create Copy</a>
        <a href="#" class="btn btn-sm btn-default btn-create" data-url="@Url.Action("Create")">Create</a>
        <a href="#" class="btn btn-sm btn-default btn-danger btn-delete" data-url="@Url.Action("Delete", new { dt = effectivity })">Delete</a>
    </div>
}