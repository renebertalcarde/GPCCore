@using Module.DB
@model string
@{
    tblGroup group = (tblGroup)ViewBag.Group;

    List<tblGroup> groups = (List<tblGroup>)ViewBag.Groups;
}

<label>Group</label>
<select onchange="itemSelected(this)" class="form-control">
    @foreach (tblGroup o in groups)
            {
        <option value="@o.Id" @(group.Id == o.Id ? "selected" : "")>@o.GroupName.ToUpper()</option>
    }
</select>

<br />

<script>
    function itemSelected(sel) {
        window.location = vdUrl('@Model' + $(sel).val());
    }
</script>