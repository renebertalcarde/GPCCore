@model List<coreApp.Breadcrumb>

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="~/">Home</a>
    </li>

    @if (Model != null)
    {
        for (int i = 0; i < Model.Count; i++)
        {
            coreApp.Breadcrumb bc = Model[i];
            if (i == Model.Count - 1)
            {
                <li class="breadcrumb-item active" aria-current="page">
                    @bc.Description
                </li>
            }
            else
            {
                <li class="breadcrumb-item">
                    <a href="@bc.Link">@bc.Description</a>
                </li>
            }

        }
    }
    
</ol>
