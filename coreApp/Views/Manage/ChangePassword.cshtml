
@using coreApp.Models
@model ChangePasswordViewModel

@using (Html.BeginForm("ChangePassword", "Manage", new { area = "" }, FormMethod.Post, new { @class = "form-horizontal", id = "ChangePasswordForm", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.OldPassword)
        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "Old Password" })
        @Html.ValidationMessageFor(m => m.OldPassword)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NewPassword)
        <div id="jpscont">
            <div class="jpsmeter"></div>
            <div class="jpsinfo">
                <a href="#" id="passwordPolicy" title="Password validity requirements">
                    <i class="fa fa-info-circle"></i>
                </a>
            </div>
        </div>
        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "New Password", autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.NewPassword)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ConfirmPassword)
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
        @Html.ValidationMessageFor(m => m.ConfirmPassword)
    </div>

    <div class="form-group text-right">
        <button type="button" class="btn btn-sm btn-default btn-cancel-change-pw">Cancel</button>
        <button type="button" class="btn btn-sm btn-default btn-change-pw">Submit</button>
    </div>

}
